<div class="inventory-details cnc-prodcst" data-productid="{{ product.id }}">
  <div class="broadway loader">
    <div class="dropdown">
      <button class="open-modal-cnc dropbtn"><b>Broadway</b>
        {% comment %} <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
          <polygon points="12 17.414 3.293 8.707 4.707 7.293 12 14.586 19.293 7.293 20.707 8.707 12 17.414"/>
        </svg> {% endcomment %}
      </button>
    </div>
    {% comment %} <p>Closes 11:59PM</p> {% endcomment %}
  </div>
  <div class="out-stock inventory_status">
    <p>Click & Collect</p>
    <span class="stock">Out Stock</span>
  </div>

  <a href="javascript:void(0)" class="open-modal-cnc store-link">See Store Info </a>
</div>

{% schema %}
{
  "name": "Product page extentions",
  "javascript":  "pdp-c-n-c.js",
  "stylesheet": "pdp-c-n-c.css",
  "target": "section",
  "settings": [
    { "type": "product", "id": "product", "label": "product", "autofill": true },
    { "type": "color", "id": "colour", "label": "Star Colour", "default": "#ff0000" }
  ]
}
{% endschema %}

